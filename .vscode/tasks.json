{
  "version": "2.0.0",
  "command": "",
  "args": [],
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "windows": {
        "command": "build_debug.bat"
      },
      "linux": {
        "command": "./build_debug.sh"
      },
      "osx": {
        "command": "./build_debug.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "group": "build"
    },
    {
      "label": "Build Release",
      "type": "shell",
      "windows": {
        "command": "build_release.bat"
      },
      "linux": {
        "command": "./build_release.sh"
      },
      "osx": {
        "command": "./build_release.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "group": "build"
    },
    {
      "label": "Build Web",
      "type": "shell",
      "windows": {
        "command": "build_web.bat"
      },
      "linux": {
        "command": "./build_web.sh"
      },
      "osx": {
        "command": "./build_web.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "group": "build"
    },
    {
      "label": "Build Hot Reload",
      "type": "shell",
      "windows": {
        "command": "build_hot_reload.bat"
      },
      "linux": {
        "command": "./build_hot_reload.sh"
      },
      "osx": {
        "command": "./build_hot_reload.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
